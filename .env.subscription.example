# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/pondokdigital"
POSTGRES_URL="postgresql://username:password@localhost:5432/pondokdigital"

# NextAuth Configuration  
NEXTAUTH_SECRET="your-secret-key-here"
NEXTAUTH_URL="http://localhost:3030"

# Base URL
NEXT_PUBLIC_BASE_URL="http://localhost:3030"

# Midtrans Payment Gateway Configuration
# Get these from your Midtrans Dashboard
MIDTRANS_SERVER_KEY="your-midtrans-server-key"
MIDTRANS_CLIENT_KEY="your-midtrans-client-key"
MIDTRANS_IS_PRODUCTION="false"

# Subscription System Configuration
# Secret token for cron jobs (generate a secure random string)
CRON_SECRET="your-secure-cron-token-here"

# Email Configuration (for notifications)
SMTP_HOST="your-smtp-host"
SMTP_PORT="587"
SMTP_USER="your-email@domain.com"
SMTP_PASSWORD="your-email-password"
EMAIL_FROM="noreply@pondokdigital.id"

# WhatsApp Integration (if using)
WHATSAPP_API_URL="your-whatsapp-api-url"
WHATSAPP_API_TOKEN="your-whatsapp-token"

# Redis Configuration (optional, for caching)
REDIS_URL="redis://localhost:6379"

# File Storage Configuration
UPLOAD_MAX_SIZE="50" # MB
STORAGE_PROVIDER="local" # local, aws-s3, google-cloud

# AWS S3 (if using)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_S3_BUCKET="your-s3-bucket"
AWS_REGION="ap-southeast-1"

# Google Cloud Storage (if using)
GOOGLE_CLOUD_PROJECT_ID="your-project-id"
GOOGLE_CLOUD_STORAGE_BUCKET="your-bucket-name"
GOOGLE_APPLICATION_CREDENTIALS="path/to/service-account.json"

# Twilio SMS Configuration (optional)
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="your-twilio-phone"

# Logging Configuration
LOG_LEVEL="info" # debug, info, warn, error
ENABLE_SUBSCRIPTION_LOGS="true"

# Security Configuration
BCRYPT_ROUNDS="12"
JWT_EXPIRY="7d"
RATE_LIMIT_MAX="100" # requests per 15 minutes
RATE_LIMIT_WINDOW="900000" # 15 minutes in milliseconds

# Development Configuration
NODE_ENV="development"
PORT="3030"

# Analytics & Monitoring (optional)
GOOGLE_ANALYTICS_ID="your-ga-id"
SENTRY_DSN="your-sentry-dsn"